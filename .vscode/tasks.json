{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "fpm: run example (gfortran)",
      "type": "shell",
      "command": "fpm",
      "args": [
        "run",
        "--example",
        "${fileBasenameNoExtension}",
        "--profile",
        "debug",
        "--compiler",
        "gfortran",
        "--runner",
        "cp",
        "--",
        "${workspaceFolder}/build/vscode/example/"
      ],
      "group": {
        "kind": "test",
        "isDefault": false
      },
      "options": {
        "shell": {
          "executable": "bash",
          "args": [
            "-ci"
          ]
        }
      },
      "dependsOn": [
        "Prepare Example Directories"
      ],
      "dependsOrder": "sequence",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "panel": "shared"
      }
    },
