@gf
options run
options --target bench
options --compiler gfortran
options --profile release
options --flag "-ftree-parallelize-loops=8 -flto"

@if
options run
options --target bench
options --compiler ifx
options --profile release
options --flag "-qopenmp -flto"

@nv
options run
options --target bench
options --compiler nvfortran
options --profile release
options --flag "-O3 -stdpar=multicore -Mautoinline -Munroll -Mcache_align -Mvect=simd -fstrict-aliasing -Mdse -Mpropcond -tp=native"

@fl
options run
options --target bench
options --compiler flang-new
options --profile release
options --flag "-cpp"